pipeline 
{
    agent any
    stages {
        	stage ('Maven Compile') 
		{
            	steps {
                
                    echo "Project Compile Stage"
                    bat label: 'Compilation Running',script:'''mvn comppile'''
                 
            		}
       		 }
		stage ('Unit Test') 
		{
            	steps {
                
                    echo "Project Testing Stage"
                    bat label: 'Test Running',script:'''mvn test'''
                 
            		}
       		 }
		stage ('Maven Package') 
		{
            	steps {
                
                    echo "Project Packaging Stage"
                    bat label: 'Project Pckaging',script:'''mvn package'''
                 
            		}
       		 }

        
    	}
}